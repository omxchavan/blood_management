<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>All Blood Requests - Blood Bank System</title>
  <link rel="icon" href="/favicon.png" type="image/png">
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    /* Keep your existing styles or add custom styles here if needed */
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .animate-fadeIn { animation: fadeIn 0.6s ease-out; }
  </style>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">

  <!-- Navigation Bar -->
  <nav class="bg-white shadow sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
      <h1 class="text-xl font-bold text-red-600">Blood Requests Management</h1>
      <div class="space-x-4">
        <a href="/" class="text-gray-700 hover:text-red-600">Home</a>
        <a href="/bloodbank-dashboard" class="text-gray-700 hover:text-red-600">Dashboard</a>
        <a href="/profile" class="text-gray-700 hover:text-red-600">Profile</a>
        <a href="/logout" class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700">Logout</a>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="flex-1 p-6 container mx-auto">
    <!-- Header -->
    <div class="mb-6 animate-fadeIn">
      <h2 class="text-3xl font-bold text-gray-800 mb-2">All Blood Requests</h2>
      <p class="text-gray-600">View and manage all blood requests from hospitals</p>
    </div>

    <!-- Requests Table -->
    <div class="overflow-x-auto bg-white rounded-lg shadow-lg p-4">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-2 text-left text-xs font-semibold text-gray-500 uppercase">Hospital</th>
            <th class="px-4 py-2 text-left text-xs font-semibold text-gray-500 uppercase">Patient</th>
            <th class="px-4 py-2 text-left text-xs font-semibold text-gray-500 uppercase">Blood Group</th>
            <th class="px-4 py-2 text-left text-xs font-semibold text-gray-500 uppercase">Units</th>
            <th class="px-4 py-2 text-left text-xs font-semibold text-gray-500 uppercase">Urgency</th>
            <th class="px-4 py-2 text-left text-xs font-semibold text-gray-500 uppercase">Status</th>
            <th class="px-4 py-2 text-left text-xs font-semibold text-gray-500 uppercase">Date</th>
            <th class="px-4 py-2 text-left text-xs font-semibold text-gray-500 uppercase">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 bg-white">
          <% if (typeof requests !== 'undefined' && requests.length > 0) { %>
            <% requests.forEach(function(request) { %>
              <tr class="hover:bg-gray-100 transition">
                <td class="px-4 py-2 whitespace-nowrap text-sm"><%= request.requestedBy?.name || 'Hospital' %></td>
                <td class="px-4 py-2 whitespace-nowrap text-sm"><%= request.patientName || 'N/A' %></td>
                <td class="px-4 py-2 whitespace-nowrap text-sm"><%= request.bloodGroup %></td>
                <td class="px-4 py-2 whitespace-nowrap text-sm"><%= request.unitsRequired || request.units || 'N/A' %></td>
                <td class="px-4 py-2 whitespace-nowrap text-sm"><%= request.urgency || 'N/A' %></td>
                <td class="px-4 py-2 whitespace-nowrap">
                  <%
                    const statusClassMap = {
                      'pending': 'bg-yellow-100 text-yellow-800',
                      'approved': 'bg-green-100 text-green-800',
                      'fulfilled': 'bg-blue-100 text-blue-800',
                      'rejected': 'bg-red-100 text-red-800',
                      'cancelled': 'bg-gray-100 text-gray-800'
                    };
                    const statusClass = statusClassMap[request.status] || 'bg-gray-100 text-gray-800';
                  %>
                  <span class="px-2 py-1 rounded-full text-xs font-semibold <%= statusClass %>"><%= request.status || 'N/A' %></span>
                </td>
                <td class="px-4 py-2 whitespace-nowrap text-sm"><%= new Date(request.createdAt).toLocaleDateString() %></td>
                <td class="px-4 py-2 whitespace-nowrap space-x-2">
                  <% if (request.status === 'pending') { %>
                    <form action="/request/requestStatus" method="POST" style="display:inline;">
                      <input type="hidden" name="requestId" value="<%= request._id %>"/>
                      <button type="submit" name="status" value="approved" class="bg-green-100 px-3 py-1 rounded hover:bg-green-200 text-sm">Approve</button>
                    </form>
                    <form action="/request/requestStatus" method="POST" style="display:inline;">
                      <input type="hidden" name="requestId" value="<%= request._id %>"/>
                      <button type="submit" name="status" value="rejected" class="bg-red-100 px-3 py-1 rounded hover:bg-red-200 text-sm">Reject</button>
                    </form>
                  <% } else if (request.status === 'approved') { %>
                    <form action="/request/requestStatus" method="POST" style="display:inline;">
                      <input type="hidden" name="requestId" value="<%= request._id %>"/>
                      <button type="submit" name="status" value="fulfilled" class="bg-blue-100 px-3 py-1 rounded hover:bg-blue-200 text-sm" onclick="return confirm('Fulfill this request?')">Fulfill</button>
                    </form>
                  <% } else { %>
                    <span class="text-gray-400 text-sm"><%= request.status %></span>
                  <% } %>
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="8" class="px-4 py-4 text-center text-gray-500">No blood requests found.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </main>

  <!-- Footer -->
  <footer class="bg-gray-800 text-white py-4 text-center mt-auto">
    <p>&copy; 2025 Blood Bank Management System. All rights reserved.</p>
  </footer>

</body>
</html>