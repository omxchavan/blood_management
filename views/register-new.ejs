    <script>
      function selectRole(role) {
        // Remove selected class from all cards
        document.querySelectorAll('.role-card').forEach(card => {
          card.classList.remove('selected');
        });
        
        // Add selected class to clicked card
        event.currentTarget.classList.add('selected');
        
        // Set hidden input value
        document.getElementById('role').value = role;
        
        // Toggle role fields
        toggleRoleFields();
      }

      function toggleRoleFields() {
        const role = document.getElementById('role').value;
        const bloodbankFields = document.getElementById('bloodbankFields');
        const hospitalFields = document.getElementById('hospitalFields');

        // Hide all role-specific sections
        bloodbankFields.classList.add('hidden');
        hospitalFields.classList.add('hidden');

        // Remove required attributes and disable all role-specific fields
        const roleInputs = document.querySelectorAll('#bloodbankFields input, #hospitalFields input');
        roleInputs.forEach(input => {
          input.removeAttribute('required');
          input.setAttribute('disabled', 'disabled');
        });

        // Show and set required for selected role
        if (role === 'bloodbank') {
          bloodbankFields.classList.remove('hidden');
          document.querySelectorAll('#bloodbankFields input[id^="bb_"]').forEach(input => {
            if (input.id !== 'bb_email') { // contactEmail is optional
              input.setAttribute('required', 'required');
            }
            input.removeAttribute('disabled');
          });
        } else if (role === 'hospital') {
          hospitalFields.classList.remove('hidden');
          document.querySelectorAll('#hospitalFields input[id^="h_"]').forEach(input => {
            input.setAttribute('required', 'required');
            input.removeAttribute('disabled');
          });
        }
      }

      // Add loading state to form
      document.getElementById('registrationForm').addEventListener('submit', function(e) {
        const button = this.querySelector('button[type="submit"]');
        const originalText = button.innerHTML;
        button.innerHTML = '<svg class="animate-spin h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>Creating Account...';
        button.disabled = true;
        
        // Re-enable after 5 seconds in case of error
        setTimeout(() => {
          button.innerHTML = originalText;
          button.disabled = false;
        }, 5000);
      });

