<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>All Blood Banks - Blood Bank System</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    /* Remove the animate-fadeIn class for instant appearance */
    .gradient-text {
      background: linear-gradient(135deg, #dc2626, #991b1b);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    .card-hover {
      transition: all 0.3s ease;
    }
    .card-hover:hover {
      transform: translateY(-8px);
      box-shadow: 0 20px 30px rgba(0, 0, 0, 0.15);
    }
  </style>
</head>
<body class="bg-gradient-to-br from-red-50 via-pink-50 to-red-100 min-h-screen font-sans text-gray-700">

  <!-- Navigation -->
  <nav class="bg-white/90 backdrop-blur-md shadow-lg sticky top-0 z-50 border-b border-red-100">
    <div class="container mx-auto px-6 py-4 flex items-center justify-between">
      <!-- Logo & Title -->
      <div class="flex items-center space-x-3">
        <div class="relative">
          <div class="absolute inset-0 bg-red-600 rounded-full blur-lg opacity-30 animate-pulse"></div>
          <div class="relative bg-gradient-to-br from-red-500 to-red-700 p-2 rounded-xl shadow-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 4v16m8-8H4"></path>
            </svg>
          </div>
        </div>
        <h1 class="text-2xl font-bold gradient-text">All Blood Banks</h1>
      </div>
      <!-- Navigation Links -->
      <div class="flex items-center space-x-4 font-medium text-gray-700">
        <a href="/" class="hover:text-red-600 transition-colors">Home</a>
        <% if (typeof user !== 'undefined' && user) { %>
          <% if (user.role === 'hospital') { %>
            <a href="/hospital-dashboard" class="hover:text-red-600 transition-colors">Dashboard</a>
          <% } else if (user.role === 'bloodbank') { %>
            <a href="/bloodbank-dashboard" class="hover:text-red-600 transition-colors">Dashboard</a>
          <% } %>
          <a href="/profile" class="hover:text-red-600 transition-colors">Profile</a>
          <a href="/logout" class="bg-red-600 text-white px-3 py-1 rounded-lg hover:bg-red-700 transition">Logout</a>
        <% } else { %>
          <a href="/login" class="hover:text-red-600 transition-colors">Login</a>
          <a href="/register" class="bg-red-600 text-white px-3 py-1 rounded-lg hover:bg-red-700 transition">Register</a>
        <% } %>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container mx-auto px-6 py-8 relative z-10">

    <!-- Header Section -->
    <div class="mb-8 animate-fadeIn">
      <div class="bg-white rounded-2xl shadow-xl p-6">
        <div class="flex items-center justify-between">
          <div>
            <h2 class="text-3xl font-bold gradient-text mb-2">Browse Blood Banks</h2>
            <p class="text-gray-600">View all registered blood banks and their inventory details</p>
          </div>
          <!-- Refresh Button -->
          <div>
            <button onclick="window.location.reload()" class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg flex items-center transition duration-200 text-sm font-medium">
              <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
              </svg>
              Refresh
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Blood Banks Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% if (typeof bloodBanks !== 'undefined' && bloodBanks && bloodBanks.length > 0) { %>
        <% bloodBanks.forEach(function(bank) { %>
          <div class="bg-white rounded-xl shadow-lg overflow-hidden card-hover transition-transform duration-200">
            <!-- Card Header -->
            <div class="bg-gradient-to-r from-red-500 to-red-700 p-4 flex justify-between items-center">
              <h3 class="text-xl font-bold text-white"><%= bank.name %></h3>
              <% if (bank.isVerified) { %>
                <span class="flex items-center px-2 py-1 rounded-full text-xs font-semibold bg-green-100 text-green-800">
                  <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                  </svg>
                  Verified
                </span>
              <% } %>
            </div>

            <!-- Card Body -->
            <div class="p-6 space-y-4">
              <!-- Contact Info -->
              <div class="space-y-2">
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-gray-400 mr-2 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                  <span class="text-gray-600"><%= bank.phone %></span>
                </div>
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-gray-400 mr-2 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                  <span class="text-gray-600"><%= bank.email %></span>
                </div>
                <% if (bank.address && bank.address.city) { %>
                  <div class="flex items-start">
                    <svg class="w-5 h-5 text-gray-400 mr-2 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    <span class="text-gray-600"><%= bank.address.city %>, <%= bank.address.state %></span>
                  </div>
                <% } %>
              </div>

              <!-- Inventory Summary -->
              <% if (bank.inventory && bank.inventory.length > 0) { %>
                <div class="border-t pt-4 mt-4">
                  <h4 class="text-sm font-semibold text-gray-700 mb-2">Available Blood Groups:</h4>
                  <div class="flex flex-wrap gap-2">
                    <% bank.inventory.forEach(function(item) { %>
                      <% if (item.quantity > 0) { %>
                        <span class="px-2 py-1 bg-red-100 text-red-800 rounded-full text-xs font-semibold">
                          <%= item.bloodGroup %>: <%= item.quantity %>
                        </span>
                      <% } %>
                    <% }); %>
                  </div>
                </div>
              <% } %>

              <!-- View Details Button -->
              <!-- Updated to trigger modal with data -->
              <a href="#"
                 class="block mb-4 bg-white p-4 rounded-xl shadow hover:shadow-lg transition view-details-btn"
                 data-bank='<%- JSON.stringify(bank) %>'>
                View Details
              </a>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <!-- No Blood Banks -->
        <div class="col-span-full">
          <div class="bg-white rounded-xl shadow-xl p-12 text-center">
            <svg class="w-16 h-16 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
            <h3 class="text-xl font-semibold text-gray-700 mb-2">No Blood Banks Found</h3>
            <p class="text-gray-600">Currently, no registered blood banks are available.</p>
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-gray-800 text-white py-6 mt-12">
    <div class="container mx-auto px-6 text-center">
      <p>&copy; 2025 Blood Bank Management System. All rights reserved.</p>
    </div>
  </footer>

  <!-- Modal Overlay -->
  <div id="inventoryModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50 overflow-y-auto">
    <div class="bg-white rounded-xl max-w-3xl w-full mx-4 p-6 relative shadow-lg">
      <!-- Close Button -->
      <button id="closeModal" class="absolute top-4 right-4 text-gray-500 hover:text-gray-700">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
      <!-- Modal Content will be injected here -->
      <div id="modalContent"></div>
    </div>
  </div>

  <!-- Scripts -->
  <script>
    // Get modal elements
    const modal = document.getElementById('inventoryModal');
    const modalContent = document.getElementById('modalContent');
    const closeBtn = document.getElementById('closeModal');

    // Function to open modal with data
    function showInventoryModal(bank) {
      const html = `
        <h2 class="text-2xl font-bold mb-4 text-center text-red-600">Inventory Details - ${bank.name}</h2>
        <table class="w-full table-auto border border-gray-300 rounded-lg mb-4">
          <thead>
            <tr class="bg-red-100 text-gray-700">
              <th class="border border-gray-300 px-4 py-2">Blood Group</th>
              <th class="border border-gray-300 px-4 py-2">Quantity</th>
            </tr>
          </thead>
          <tbody>
            ${bank.inventory && bank.inventory.length > 0 ? bank.inventory.map(item => `
              <tr class="hover:bg-gray-100 transition">
                <td class="border border-gray-300 px-4 py-2 text-center">${item.bloodGroup}</td>
                <td class="border border-gray-300 px-4 py-2 text-center">${item.quantity}</td>
              </tr>
            `).join('') : `
              <tr>
                <td colspan="2" class="border border-gray-300 px-4 py-2 text-center text-gray-500">No inventory data available</td>
              </tr>
            `}
          </tbody>
        </table>
      `;
      modalContent.innerHTML = html;
      modal.classList.remove('hidden');
      modal.classList.add('flex');
    }

    // Close modal on clicking close button
    closeBtn.onclick = () => {
      modal.classList.add('hidden');
      modal.classList.remove('flex');
    }

    // Close modal on clicking outside the modal box
    window.onclick = (e) => {
      if (e.target == modal) {
        modal.classList.add('hidden');
        modal.classList.remove('flex');
      }
    };

    // Attach event listeners to all "View Details" buttons
    document.querySelectorAll('.view-details-btn').forEach(btn => {
      btn.onclick = () => {
        const bankData = JSON.parse(btn.getAttribute('data-bank'));
        showInventoryModal(bankData);
      };
    });
  </script>
</body>
</html>